{
	"name": "x402-escrow",
	"version": "1.0.0",
	"description": "Reference implementation for x402 payment standard: exact and escrow-deferred schemes",
	"type": "module",
	"main": "index.js",
	"scripts": {
		"build": "forge build",
		"test": "forge test",
		"test:verbose": "forge test -vvv",
		"test:gas": "forge test --gas-report",
		"test:fork:base": "forge test --fork-url $BASE_SEPOLIA_RPC -vvv",
		"deploy:base-sepolia": "forge script script/Deploy.s.sol --rpc-url base_sepolia --broadcast --verify",
		"balances": "bash scripts/check_balances.sh",
		"fund": "bash scripts/fund_wallets.sh",
		"start": "bash scripts/start_servers.sh",
		"stop": "bash scripts/stop_servers.sh",
		"facilitator": "tsx facilitator/server.ts",
		"seller": "tsx seller/server.ts",
		"buyer": "tsx buyer/agent.ts",
		"demo:exact": "tsx scripts/demo-exact.ts",
		"demo:exact:full": "bash scripts/run_demo_exact.sh",
		"demo:escrow-deferred": "tsx scripts/demo-escrow-deferred.ts",
		"test:e2e": "mocha --require tsx/cjs --extension ts 'test/e2e/**/*.test.ts'",
		"test:baseline": "mocha --require tsx/cjs --extension ts 'test/**/*.test.ts' --timeout 30000"
	},
	"keywords": [
		"x402",
		"payment",
		"eip-712",
		"eip-3009",
		"foundry",
		"micropayments"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/chai": "^4.3.11",
		"@types/express": "^4.17.21",
		"@types/mocha": "^10.0.6",
		"@types/node": "^20.10.5",
		"chai": "^4.3.10",
		"mocha": "^10.2.0",
		"tsx": "^4.7.0",
		"typescript": "^5.3.3"
	},
	"dependencies": {
		"axios": "^1.6.2",
		"dotenv": "^16.3.1",
		"ethers": "^6.9.0",
		"express": "^4.18.2"
	}
}

